<Window x:Class="WpfAudioVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioVisualizer"
        mc:Ignorable="d" Background="Black"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Loaded="Window_Loaded" Closed="Window_Closed"
        xmlns:vwpf="clr-namespace:LibAudioVisualizer.WPF;assembly=LibAudioVisualizer.WPF"
        Title="MainWindow" Height="570" Width="800" >
    <Grid>
        <vwpf:RealtimeAudioVisualizerPresenter
            x:Name="visualizerControl"
            SpectrumBlurry="0"
            StripSpacing=".5"
            ColorGradientOffset=".1"/>
    </Grid>
</Window>